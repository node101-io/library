extends ../partials/navbar
block inner
  input.display-none#writing-json(value=JSON.stringify(writing))
  input.display-none#MONTHS(value=JSON.stringify(MONTHS))
  .writing-outer-wrapper
    .writing-content-wrapper
      img.writing-cover(src=writing.cover width='100%' alt=writing.title)
      .writing-info-wrapper
        .writing-info-inner-wrapper
          a.writing-blog-wrapper(href=writing.blog.link)
            img.writing-blog-image(src=writing.blog.image alt=writing.blog.title)
            h3.writing-blog-title= writing.blog.title
          span.writing-date â€¢ #{writing.created_at.split('.')[0]} #{MONTHS[parseInt(writing.created_at.split('.')[1]) - 1]} #{writing.created_at.split('.')[2]}
        a.writing-writer-wrapper(href=writing.writer.link)
          .writing-writer-info-wrapper
            h3.writing-writer-name= writing.writer.name
            h4.writing-writer-title= writing.writer.title
          img.writing-writer-image(src=writing.writer.image alt=writing.writer.name)
      h1.writing-title= writing.title
      h2.writing-subtitle= writing.subtitle
      .writing-content !{writing.content.map(each => each.split('contenteditable="true"').join('').split('spellcheck="false"').join('').split('general-writing').join('writing')).join('').split('width="500px"').join('')}
      .writing-end-writer-outer-wrapper
        a.writing-end-writer-wrapper(href=writing.writer.link)
          .writing-end-writer-info-wrapper
            h1.writing-end-writer-name= writing.writer.name
            h2.writing-end-writer-title= writing.writer.title
            .writing-end-writer-social-media-account-outer-wrapper
              each account in Object.keys(writing.writer.social_media_accounts)
                .writing-end-writer-social-media-account-wrapper(id=writing.writer.social_media_accounts[account])
                  svg.writing-end-writer-social-media-account-icon(viewBox=SOCIAL_MEDIA_ICONS[account].view_box xmlns='http://www.w3.org/2000/svg')
                    path(d=SOCIAL_MEDIA_ICONS[account].d)
          img.writing-end-writer-image(src=writing.writer.image alt=writing.writer.name)
  .general-writings-wrapper
  .general-writings-loading-icon-wrapper#writings-loading-icon
